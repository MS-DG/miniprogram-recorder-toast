.Recording {
    opacity: 1;
    display: flex;
    flex-direction: column;
    position: fixed;
    z-index: 5000;
    width: 120px;
    height: 120px;
    top: 230px;
    left: 50%;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 5px;
    color: #fff;
    align-items: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    justify-content: space-around;
}

.Recording-content {
    margin-top: 3px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.Recording-contentIcon {
    width: 60px;
    height: 60px;
    margin-top: 3px;
    background-repeat: no-repeat;
    background-size: 60%;
    background-position: center;
    font-size: 100rpx;
    font-weight: blod;
    text-align: center;
}

