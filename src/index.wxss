.Recording-title {
    font-size: 12px;
    margin-top: -12px;
    padding: 4rpx;
}

.Recording-title_red {
    background: #a52e2c;
}

/*voice loading*/

.Recording-contentSpeech {
    width: 38rpx;
    height: 10rpx;
    -webkit-animation-name: skyset;
    -webkit-animation-duration: 3s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function: step-start;
    position: relative;
    overflow: hidden;
}

@-webkit-keyframes skyset {
    0% {
        height: 10rpx;
    }
    10% {
        height: 20rpx;
    }
    20% {
        height: 30rpx;
    }
    30% {
        height: 40rpx;
    }
    40% {
        height: 50rpx;
    }
    50% {
        height: 60rpx;
    }
    60% {
        height: 70rpx;
    }
    70% {
        height: 90rpx;
    }
    80% {
        height: 90rpx;
    }
    90% {
        height: 100rpx;
    }
}

.speaker_wrapper {
    margin: 0 0 14rpx -10rpx;
}

